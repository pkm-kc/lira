<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Lira" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/neutral</item>
        <item name="android:fontFamily">@font/sfprodisplayregular</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.App.LinearProgressIndicator
        </item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurfaceContainer">#FFFFFF</item>
        <item name="colorSecondaryContainer">#FFDCDC</item>
    </style>

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/secondary50</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TopBarTitleText</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/secondary50</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.LinearProgressIndicator</item>
        <item name="trackThickness">16dp</item>
        <item name="trackCornerRadius">999dp</item>
        <item name="trackColor">@color/neutral</item>
        <item name="android:max">300</item>
    </style>

    <style name="ThemeOverlay.App.LinearProgressIndicator" parent="">
        <item name="colorPrimary">@color/primary10</item>
    </style>
</resources>